#ifndef __APP_H__
#define __APP_H__

typedef struct project_version
{
    char hardware[8];
    char software[8];
    char buildtime[32];
}project_version_t;

typedef enum {
    COM1 = 0,
    COM2,
    COM3,
    COM4,

    COM_MAX
}COM_NO;

typedef enum {
    COM_ROLE_SLAVE = 0,
    COM_ROLE_MASTER,

    COM_ROLE_MAX
}COM_ROLE;

#define USART_MPORT_MAX (4)
#define IP_BUF_LEN (4)
typedef struct port_config_item
{
    unsigned char com;
    unsigned char role;
    unsigned char peer[IP_BUF_LEN];
    unsigned short port;
}port_config_item_t;

int test_cmd(int fd);
int get_version(int fd);
int get_service_config(int fd);
int clear_service_config(int fd);
int modify_service_config(int fd, int argc, char **argv);

#endif
